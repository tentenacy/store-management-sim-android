<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Button">
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/checkbox</item>
    </style>
    <style name="CheckBoxText" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/checkbox_circle</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>