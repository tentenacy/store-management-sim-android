<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_menu_mng_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3763a1">

        <ImageView
            android:id="@+id/image_menu_mng_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_white_arrow"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_menu_mng_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_regular"
            android:includeFontPadding="false"
            android:text="관리할 메뉴를\n선택해주세요."
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btn_menu_mng_category"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.375" />

        <Button
            android:id="@+id/btn_menu_mng_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="18sp"
            android:fontFamily="@font/ns_regular"
            android:textColor="#3763a1"
            android:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            android:padding="12dp"
            android:letterSpacing="0"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="20dp"
            android:includeFontPadding="false"
            android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_max="200dp"
            app:layout_constraintEnd_toStartOf="@id/btn_menu_mng_main_menu"
            app:layout_constraintTop_toBottomOf="@id/text_menu_mng_title"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_menu_mng_main_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="메인메뉴"
            android:textSize="18sp"
            android:fontFamily="@font/ns_regular"
            android:textColor="#3763a1"
            android:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            android:padding="12dp"
            android:letterSpacing="0"
            android:includeFontPadding="false"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/btn_menu_mng_category"
            app:layout_constraintBottom_toBottomOf="@id/btn_menu_mng_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_menu_mng_category" />

        <Button
            android:id="@+id/btn_menu_mng_option_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="옵션메뉴"
            android:textSize="18sp"
            android:fontFamily="@font/ns_regular"
            android:textColor="#3763a1"
            android:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            android:padding="12dp"
            android:letterSpacing="0"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="20dp"
            android:includeFontPadding="false"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintWidth_max="200dp"
            app:layout_constraintEnd_toStartOf="@id/btn_menu_mng_option_group"
            app:layout_constraintTop_toBottomOf="@id/btn_menu_mng_category"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_menu_mng_option_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="옵션그룹"
            android:textSize="18sp"
            android:fontFamily="@font/ns_regular"
            android:textColor="#3763a1"
            android:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            android:padding="12dp"
            android:letterSpacing="0"
            android:includeFontPadding="false"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/btn_menu_mng_option_menu"
            app:layout_constraintBottom_toBottomOf="@id/btn_menu_mng_option_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_menu_mng_option_menu" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
