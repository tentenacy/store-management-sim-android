<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="use"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3763a1">

        <TextView
            android:id="@+id/text_sub_categories_main_category_name"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/ns_regular"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText"
            tools:text="빽다방 인천구월정각초점 인천구월정각초점" />

        <TextView
            android:id="@+id/text_sub_categories_main_category_code"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_regular"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/text_sub_categories_main_category_name"
            app:layout_constraintTop_toTopOf="@id/constraint_sub_categories_main_category_use_container"
            app:layout_constraintBottom_toBottomOf="@id/constraint_sub_categories_main_category_use_container"
            tools:text="0000000000" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_sub_categories_main_category_use_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="13dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/radius_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_sub_categories_main_category_name">

            <TextView
                android:id="@+id/text_sub_categories_main_category_use"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{use}"
                android:fontFamily="@font/ns_regular"
                android:text='@{use ? "사용" : "미사용"}'
                android:textColor='@{use ? @color/use : @color/use_not}'
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_sub_categories_main_category_use"
                tools:text="사용"
                tools:textColor="#4e93ce" />

            <View
                android:id="@+id/view_sub_categories_main_category_use"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@{use ? @drawable/circle_use : @drawable/circle_use_not}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:background="@drawable/circle_use" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_sub_categories_details_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/radius_16dp"
            android:elevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_sub_categories_main_category_use_container"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/text_sub_categories_details_address"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ns_regular"
                android:textColor="#1d1d1b"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="인천 남동구 구월동 1241-1" />

            <TextView
                android:id="@+id/text_sub_categories_details_phone"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/ns_regular"
                android:textColor="#4e93ce"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_sub_categories_details_address"
                tools:text="032-463-3113" />

            <Button
                android:id="@+id/btn_sub_categories_details"
                style="@style/Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#edf4f9"
                android:elevation="0dp"
                android:fontFamily="@font/ns_regular"
                android:padding="12dp"
                android:stateListAnimator="@null"
                android:text="상세보기"
                android:textColor="#4e93ce"
                android:textSize="18sp"
                android:layout_margin="20dp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_sub_categories_details_phone"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_sub_categories_dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintVertical_bias="0.45"
            app:layout_constraintBottom_toBottomOf="@id/constraint_sub_categories_details_container"
            app:layout_constraintEnd_toEndOf="@id/constraint_sub_categories_details_container"
            app:layout_constraintStart_toStartOf="@id/constraint_sub_categories_details_container"
            app:layout_constraintTop_toTopOf="@id/constraint_sub_categories_details_container" />

        <View
            android:id="@+id/view_sub_categories_dummy_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#f3f9ff"
            app:layout_constraintBottom_toBottomOf="@id/constraint_sub_categories_details_container"
            app:layout_constraintTop_toBottomOf="@id/view_sub_categories_dummy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#f3f9ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_sub_categories_dummy_2">

            <TextView
                android:id="@+id/text_sub_categories_label_middle_category"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/ns_bold"
                android:text="소분류 목록"
                android:textColor="#1d1d1b"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_sub_categories_edit"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/ns_regular"
                android:padding="8dp"
                android:text="편집"
                android:textColor="#4e93ce"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/text_sub_categories_label_middle_category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_sub_categories_label_middle_category"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
