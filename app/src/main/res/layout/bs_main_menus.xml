<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraint_bsmain_menus_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_bsmain_menus_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_black_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_bsmain_menus_title"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_bold"
            android:text="메인메뉴 조회 선택"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/image_bsmain_menus_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_bsmain_menus_cancel"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_bsmain_menus_option_group"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/rect_4476"
            android:elevation="0dp"
            android:fontFamily="@font/ns_regular"
            android:padding="12dp"
            android:stateListAnimator="@null"
            android:text="옵션그룹 조회"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_bsmain_menus_details"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_bsmain_menus_title"
            app:layout_constraintWidth_max="200dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_bsmain_menus_details"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/rect_4483"
            android:elevation="0dp"
            android:fontFamily="@font/ns_regular"
            android:padding="12dp"
            android:stateListAnimator="@null"
            android:text="상세보기"
            android:textColor="@color/rect_4475"
            android:textSize="18sp"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_bsmain_menus_option_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/btn_bsmain_menus_option_group"
            app:layout_constraintTop_toTopOf="@id/btn_bsmain_menus_option_group"
            app:layout_constraintWidth_max="200dp"
            tools:ignore="HardcodedText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
