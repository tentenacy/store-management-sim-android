<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraint_og_option_menu_add_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_og_option_menu_add_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:contentDescription="뒤로가기"
            android:src="@drawable/ic_black_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edit_og_option_menu_add_search"
            style="@style/Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/search_radius"
            android:fontFamily="@font/ns_regular"
            android:gravity="start"
            android:hint="메뉴 코드 검색"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingStart="46dp"
            android:paddingEnd="10dp"
            android:textColor="@color/rect_4474"
            android:textColorHint="@color/rect_4480"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_og_option_menu_add_back"
            app:layout_constraintTop_toTopOf="@id/image_og_option_menu_add_back"
            app:layout_constraintBottom_toBottomOf="@id/image_og_option_menu_add_back"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:contentDescription="돋보기 이미지"
            android:src="@drawable/ic_grey_search"
            app:layout_constraintBottom_toBottomOf="@id/edit_og_option_menu_add_search"
            app:layout_constraintStart_toStartOf="@id/edit_og_option_menu_add_search"
            app:layout_constraintTop_toTopOf="@id/edit_og_option_menu_add_search"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/text_og_option_menu_add_label_main_category"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/ns_bold"
            android:text="옵션메뉴 목록"
            android:textColor="@color/rect_4474"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_og_option_menu_add_search"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_og_option_menu_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:paddingBottom="63dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_og_option_menu_add_label_main_category"
            tools:listitem="@layout/item_og_option_menu_add" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
