<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="args"
            type="com.tenutz.storemngsim.data.datasource.api.dto.menu.MainMenusResponse.MainMenu" />

        <import type="android.view.View" />
        <import type="com.tenutz.storemngsim.utils.ext.TextExtKt" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_imain_menus_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_imain_menus_thumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/placeholder_logo"
            android:contentDescription="메뉴 썸네일"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:showImage="@{args.imageUrl}"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/text_imain_menus_name"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/ns_regular"
            android:maxLines="1"
            android:textColor="@{args.outOfStock ? @color/rect_4480 : @color/rect_4474}"
            android:textSize="16sp"
            android:text="@{args.menuName}"
            app:layout_constraintStart_toEndOf="@id/image_imain_menus_thumbnail"
            app:layout_constraintTop_toTopOf="@id/image_imain_menus_thumbnail"
            tools:text="에스프레소"
            tools:textColor="@color/rect_4474" />

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@drawable/radius_4dp_a0a0a0"
            android:fontFamily="@font/ns_regular"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            android:text="품절"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="@{args.outOfStock ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/text_imain_menus_name"
            app:layout_constraintStart_toEndOf="@id/text_imain_menus_name"
            app:layout_constraintTop_toTopOf="@id/text_imain_menus_name"
            tools:ignore="HardcodedText"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/text_imain_menus_code"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ns_regular"
            android:textColor="@color/rect_4480"
            android:textSize="12sp"
            android:text="@{args.menuCode}"
            app:layout_constraintStart_toStartOf="@id/text_imain_menus_name"
            app:layout_constraintTop_toBottomOf="@id/text_imain_menus_name"
            tools:text="000001" />

        <TextView
            android:id="@+id/text_imain_categories_use"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/ns_regular"
            android:text='@{args.use != null ? (args.use ? "사용" : "미사용") : "삭제됨"}'
            android:textColor='@{args.use != null ? (args.use ? @color/rect_4475 : @color/rect_4480) : @color/rect_4480}'
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_imain_categories_use"
            app:layout_constraintTop_toBottomOf="@id/text_imain_menus_code"
            tools:text="사용"
            tools:textColor="@color/rect_4475" />

        <View
            android:id="@+id/view_imain_categories_use"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@{args.use != null ? (args.use ? @drawable/circle_use : @drawable/circle_use_not) : @drawable/rect_deleted}"
            app:layout_constraintBottom_toBottomOf="@id/text_imain_categories_use"
            app:layout_constraintStart_toStartOf="@id/text_imain_menus_code"
            app:layout_constraintTop_toTopOf="@id/text_imain_categories_use"
            tools:background="@drawable/circle_use" />

        <TextView
            android:id="@+id/text_imain_menus_origin_amount"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_bold"
            android:foreground="@drawable/striking_text"
            android:paddingStart="1dp"
            android:text="@{TextExtKt.getToCurrency(args.price)}"
            android:textColor="@color/rect_4480"
            android:textSize="12sp"
            android:visibility="@{args.discountingPrice != 0 ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/text_imain_menus_unit_kr_1"
            app:layout_constraintEnd_toStartOf="@id/text_imain_menus_unit_kr_1"
            app:layout_constraintTop_toTopOf="@id/text_imain_menus_unit_kr_1"
            tools:ignore="RtlSymmetry"
            tools:text="2,000" />

        <TextView
            android:id="@+id/text_imain_menus_unit_kr_1"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/ns_regular"
            android:foreground="@drawable/striking_text"
            android:paddingEnd="1dp"
            android:text="원"
            android:textColor="@color/rect_4480"
            android:textSize="12sp"
            android:visibility="@{args.discountingPrice != 0 ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/text_imain_menus_unit_kr_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/text_imain_menus_amount"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_bold"
            android:paddingStart="1dp"
            android:text="@{TextExtKt.getToCurrency(args.discountedPrice)}"
            android:textColor="@{args.outOfStock ? @color/rect_4480 : @color/rect_4474}"
            android:textSize="16sp"
            android:visibility="@{args.discountingPrice != 0 ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/text_imain_menus_unit_kr_2"
            app:layout_constraintEnd_toStartOf="@id/text_imain_menus_unit_kr_2"
            app:layout_constraintTop_toTopOf="@id/text_imain_menus_unit_kr_2"
            tools:ignore="RtlSymmetry"
            tools:text="1,900"
            tools:textColor="@color/rect_4474" />

        <TextView
            android:id="@+id/text_imain_menus_unit_kr_2"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/ns_regular"
            android:paddingEnd="1dp"
            android:text="원"
            android:textColor="@color/rect_4474"
            android:textSize="16sp"
            android:visibility="@{args.discountingPrice != 0 ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_imain_menus_unit_kr_1"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/text_imain_menus_not_discounted_amount"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ns_bold"
            android:paddingStart="1dp"
            android:text="@{TextExtKt.getToCurrency(args.price)}"
            android:textColor="@color/rect_4474"
            android:textSize="16sp"
            android:visibility="@{args.discountingPrice != 0 ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/text_imain_menus_not_discounted_unit_kr"
            app:layout_constraintEnd_toStartOf="@id/text_imain_menus_not_discounted_unit_kr"
            app:layout_constraintTop_toTopOf="@id/text_imain_menus_not_discounted_unit_kr"
            tools:ignore="RtlSymmetry"
            tools:text="1,900"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/text_imain_menus_not_discounted_unit_kr"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/ns_regular"
            android:paddingEnd="1dp"
            android:text="원"
            android:textColor="@{args.outOfStock ? @color/rect_4480 : @color/rect_4474}"
            android:textSize="16sp"
            android:visibility="@{args.discountingPrice != 0 ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,RtlSymmetry"
            tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
